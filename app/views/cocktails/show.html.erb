<div class="container">
  <div class="card-trip">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @cocktail.name %></h2>
        <hr>
        <% @cocktail.doses.each do |dose| %>
          <p><%= dose.description %> of <%= dose.ingredient.name %>
             <%= link_to 'Delete', dose_path(dose),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></p>
        <% end %>
        <hr>
        <h4>Add an ingredient:</h4>
        <%= simple_form_for [@cocktail, @dose] do |l| %>
        <%= l.input :description %>
        <%= l.association :ingredient, as: :select %>
        <%= l.button :submit, class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>





